{
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "allowUmdGlobalAccess": true, // make typescript work with ProvidePlugin
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // "lib": ["dom", "dom.iterable", "esnext"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "./",
    "declaration": true,
    "declarationDir": "dist/esm/types",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.styl$"
        }
      }
    ],
    "paths": {
      "justorm/react": ["./node_modules/justorm/dist/esm/plugins/react"],
      "uilib": ["./src"],
      "uilib/*": ["./src/*"],
      "docs/*": ["./src/docs/*"]
    },
    "typeRoots": ["./node_modules/@types", "./tests/mocks"],
    "types": ["jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules",
    // "src/docs/**/*",
    "src/docs/examples/**/*",
    // "src/App",
    // "src/docs"
  ],
  "plugins": ["typescript-eslint-language-service"],
  "files": [
    "src/declarations.d.ts"
  ]
}
