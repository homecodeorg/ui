@import '../../theme'

.root
  max-height 200px
  width 100%

  :global(.keyboard) &
    pointer-events none

.item
  position relative
  display flex
  align-items center
  width 100%
  padding-top 0 !important
  padding-bottom 0 !important
  cursor pointer
  text-align left
  user-select none
  animation fadeIn .3s ease-out
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

  &:first-child
    border-top-left-radius 2px
    border-top-right-radius 2px
  &:last-child
    border-bottom-left-radius 2px
    border-bottom-right-radius 2px

  & > span
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

  .size-s &
    controlPaddingSize('s')
    controlFontSize('s')
    height 34px
  .size-m &
    controlPaddingSize('m')
    controlFontSize('m')
    height 38px
  .size-l &
    controlPaddingSize('l')
    controlFontSize('l')
    height 42px
  .size-xl &
    controlPaddingSize('xl')
    controlFontSize('xl')
    height 46px

  &.selected
    background-color var(--active-color-alpha-500)

  &.disabled
    cursor not-allowed
    opacity .4

  :global(.pointer) &:hover
  :global(.keyboard) &.focused
    box-shadow inset 100vw 0 0 0px var(--accent-color-alpha-200)

.group
  position sticky
  top 0
  z-index 1
  color var(--accent-color)
  font-weight 500
  pointer-events none
  padding 8px 12px
  font-size 14px
  background-color var(--decent-color)

.levelIndent
  --menu-indent-size var(--indent-s)
  &.level-1
    padding-left calc(var(--menu-indent-size) * 2)
  &.level-2
    padding-left calc(var(--menu-indent-size) * 3)
  &.level-3
    padding-left calc(var(--menu-indent-size) * 4)
  &.level-4
    padding-left calc(var(--menu-indent-size) * 5)
  &.level-5
    padding-left calc(var(--menu-indent-size) * 6)

@keyframes fadeIn
  0%
    opacity 0
  10%
    opacity 0
  100%
    opacity 1
