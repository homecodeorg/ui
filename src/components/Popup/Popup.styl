@import '../../theme'

$openTransform = scale3d(1, 1, 1)
$hideTransformVertical = scale3d(1,.5, 1)
$hideTransformHorizontal = scale3d(.5, 1, 1)

.root
  position relative
  display inline-block

.contentWrapper
  pointer-events none
  position absolute

  &.inline.isOpen
    position relative

  &:not(.inline)
    &
    & > .content
      position absolute

.trigger
  cursor pointer

  &.isOpen
    position relative
    z-index 11

  &.disabled
    pointer-events none

$contentShadow = inset 0 0 0 1px var(--accent-color-alpha-100)

.content
  position relative
  z-index 11
  min-width 100%
  max-width 70vw
  overflow hidden
  background-color var(--decent-color)
  box-shadow $contentShadow
  opacity 0
  transform-origin top center
  backface-visibility hidden
  pointer-events none

  .blur &
    backdrop-filter blur(50px)
    background-color var(--decent-color-alpha-500)

  &.size-s
    borderRadiusSize('s')
  &.size-m
    borderRadiusSize('m')
  &.size-l
    borderRadiusSize('l')

  &.elevation-1
    box-shadow $contentShadow, 0 0 var(--indent-s) 6px var(--decent-color)
  &.elevation-2
    box-shadow $contentShadow, 0 0 var(--indent-m) 6px var(--decent-color)

  &.outlined::after
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    border-radius inherit
    pointer-events none

  .isOpen &
    pointer-events all
    transform $openTransform
    opacity 1

.animating
  transition 70ms ease-out
  transition-property transform, opacity

// Directions:

.axis-top
  bottom 100%
.axis-bottom
  top 100%
.axis-right
  left 100%
.axis-left
  right 100%

.float-top
  bottom 0
.float-right
  left 0
.float-bottom
  top 0
.float-left
  right 0

.axis-top
.axis-bottom
  transform  $hideTransformVertical

  &.float-middle
    left 50%
    transform translateX(-50%) $hideTransformVertical

    .isOpen &
      transform translateX(-50%) $openTransform

.axis-left
.axis-right
  transform  $hideTransformHorizontal

  &.float-middle
    top 50%
    transform translateY(-50%) $hideTransformHorizontal

    .isOpen &
      transform translateY(-50%) $openTransform

.axis-top
  &.float-middle
    transform-origin bottom center
  &.float-right
    transform-origin bottom left
  &.float-left
    transform-origin bottom right

.axis-bottom
  &.float-middle
    transform-origin top center
  &.float-right
    transform-origin top left
  &.float-left
    transform-origin top right

.axis-right
  &.float-middle
    transform-origin center left
  &.float-top
    transform-origin bottom left
  &.float-bottom
    transform-origin top left

.axis-left
  &.float-middle
    transform-origin center right
  &.float-top
    transform-origin bottom right
  &.float-bottom
    transform-origin top right
