@import '../../theme'

.root
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  pointer-events none

.inner
  position absolute
  inset 0
  background linear-gradient(90deg, transparent 0%, var(--shimmer-color, var(--accent-color-alpha-200, rgba(255,255,255,0.2))) 50%, transparent 100%)
  animation shimmer 1.5s linear infinite

.size-s
  borderRadiusSize('s')
  .round&
    borderRadiusRoundSize('s')
.size-m
  borderRadiusSize('m')
  .round&
    borderRadiusRoundSize('m')
.size-l
  borderRadiusSize('l')
  .round&
    borderRadiusRoundSize('l')

@keyframes shimmer
  0%
    transform translateX(-100%)
  20%
    transform translateX(100%)
  100%
    transform translateX(100%)
