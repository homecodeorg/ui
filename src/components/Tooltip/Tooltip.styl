.trigger
  display: inline-block

.tooltip
  position: fixed
  background: var(--decent-color-alpha-900)
  color: var(--accent-color)
  padding: 6px 12px
  border-radius: 4px
  font-size: 14px
  line-height: 1.4
  max-width: 250px
  word-wrap: break-word
  z-index: 9999
  pointer-events: none
  margin: 0
  box-shadow 0 0 0 1px var(--accent-color-alpha-100)

  &.blur
    backdrop-filter blur(10px)
    background: var(--decent-color-alpha-500)


  &::after
    content: ''
    position: absolute

  &[data-direction="top"]
    transform: translateY(0)

    &::after
      top: 100%
      left: 50%
      transform: translateX(-50%)

  &[data-direction="bottom"]
    transform: translateY(0)

    &::after
      bottom: 100%
      left: 50%
      transform: translateX(-50%)

  &[data-direction="left"]
    transform: translateX(0)

    &::after
      left: 100%
      top: 50%
      transform: translateY(-50%)

  &[data-direction="right"]
    transform: translateX(0)

    &::after
      right: 100%
      top: 50%
      transform: translateY(-50%)

  &:popover-open
    animation: fadeIn 0.2s ease-out

@keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1
